using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Bkav.eGovCloud.Entities.Customer
{
    /// <summary>
    /// Nội dung thanh toán
    /// </summary>
    public class DocumentPayment
    {
        /// <summary>
        /// Id 1 lệ phí của hồ sơ
        /// </summary>
        public int PaymentId { get; set; }

        /// <summary>
        /// Nội dung yêu cầu bổ sung
        /// </summary>
        public string Content { get; set; }

        /// <summary>
        /// Lệ phí thanh toán
        /// </summary>
        public decimal PaymentFee { get; set; }

        /// <summary>
        /// Mã hồ sơ
        /// </summary>
        public string DocCode { get; set; }

        /// <summary>
        /// Id hồ sơ trên eGov Online
        /// </summary>
        public int DocumentId { get; set; }

        /// <summary>
        /// Nội dung thanh toán chi tiết (lệ phí)
        /// </summary>
        public string Details { get; set; }

        /// <summary>
        /// Ngày khởi tạo
        /// </summary>
        public DateTime CreateDate { get; set; }

        /// <summary>
        /// Trạng thái giao dịch
        /// </summary>
        public int Status { get; set; }

        /// <summary>
        /// Thông báo trạng thái giao dịch
        /// </summary>
        public string Message { get; set; }

        /// <summary>
        /// Mã giao dịch
        /// </summary>
        public string CurrentTxtMerch { get; set; }

        /// <summary>
        /// Thông tin chi tiết giao dịch, là chuỗi json toàn bộ thông tin response trả về của OnePay
        /// </summary>
        public string TransactionInfo { get; set; }

        /// <summary>
        /// Ngày giao dịch
        /// </summary>
        public DateTime? TransactionDate { get; set; }

        /// <summary>
        /// Yêu cầu bổ sung tương ứng
        /// </summary>
        public int LocalId { get; set; }
    }


}

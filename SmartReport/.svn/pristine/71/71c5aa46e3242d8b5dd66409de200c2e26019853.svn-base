<style>
    .gray
    {
        background-color: lightgray !important;
    }

    /*20191231 VuHQ START*/
    .htCenter {
        text-align: center;
        color:black;
    }
    .htBold
    {
        font-weight: bold;
    }

    .htItalic {
        font-style: italic;
    }

    .htStrike {
        text-decoration: line-through;
    }

    .document-info {
        overflow-x: hidden;
    }
    #wdr-toolbar-wrapper
    {
        height: 0 !important;
    }

    .wdr-credits
    {
        display: none;
    }
    .formHeader {
        clear: both;
        padding-left: 15px;
    }
    .formFooter
    {
        clear: both;
        padding-left: 15px;
        padding-top: 5px;
    }

    .document-navigation {
        display: none;
        flex: 1;
        border: 1px solid #d1d1d1;
        max-width: 100%;
        overflow: hidden;
        transition: max-width .5s ease;
    }

    .document-navigation-title {
        border-bottom: 2px solid #d1d1d1;
        padding: 5px;
    }

    .document-navigation-content ol {
        margin-left: 10px;
        padding-right: 0px;
        counter-reset: item;
        padding-inline-start: 15px;
    }

        .document-navigation-content ol li {
            display: block;
            position: relative;
        }

            .document-navigation-content ol li:before {
                content: counters(item, ".");
                counter-increment: item;
                position: absolute;
                margin-right: 100%;
                right: 0.5rem;
            }

            .document-navigation-content ol li a {
                color: #0782C1;
                text-decoration: none;
            }

    .toggle-navigation {
        min-width: 8px;
        display: none;
        align-items: center;
        border-top: 1px solid #d1d1d1;
        border-bottom: 1px solid #d1d1d1;
    }

        .toggle-navigation.hide-nav {
            border-left: 1px solid #d1d1d1;
        }

    .toggle-navigation-btn {
        flex: 1;
        height: 50px;
        background: #c1c1c1;
        border-radius: 2px;
        position: relative;
        cursor: pointer;
    }

        .toggle-navigation-btn:after {
            content: '';
            width: 100%;
            height: 10px;
            position: absolute;
            border-top: 7px solid transparent;
            border-bottom: 7px solid transparent;
            top: calc(50% - 7px);
        }

    .show-nav .toggle-navigation-btn:after {
        border-right: 7px solid #525252;
    }

    .hide-nav .toggle-navigation-btn:after {
        border-left: 7px solid #525252;
    }

    .handsontable thead th div {
        font-weight: bold;
    }

    .document-info {
        height: calc(100% - 105px) !important;
    }

    .htUnderline {
        text-decoration: underline;
    }

    .handsontable .ht_master tr th {
        visibility: inherit !important;
    }
    .handsontable .htDimmed {
        color: #222 !important;
    }
    div[id$=_explicit_template] .cke_contents {
        display: flex;
        flex-direction: column;
    }
</style>

body {
}

html, body {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    overflow: auto; /* when page gets too small */
    font-size: 11px !important;
}

#container {
    width: 975px;
    min-height: 500px;
    max-width: 1024px;
    margin: 0 auto;
    background: white;
    padding: 10px;
}

#node-settings {
    height: 500px;
}

    #node-settings > div {
        height: 100%;
    }

#nodeFromList {
    border-right: 1px solid #e3e3e3;
    height: 447px;
}

#centerContainer label {
    font-weight: normal;
}

tr.highlight-row {
    background: #E2E2E2 !important;
    color: black !important;
}

.table {
    margin-bottom: 0;
}

#nodeFromSetting .ui-layout-south {
    display: none;
}

#centerContainer .ui-layout-center {
    display: none;
}

fieldset {
    margin-bottom: 10px;
}

legend {
    font-size: 15px;
    margin-bottom: 10px;
}

select.input-sm,
input.input-sm {
    display: inline-block;
    padding: 2px 5px;
    height: 25px;
}

.input-group-sm > .form-control, .input-group-sm > .input-group-addon {
    padding: 2px 10px;
    height: 25px;
}

.imageInputWrapper > div {
    float: left;
    padding-right: 5px;
}

hr {
    margin-top: 10px;
    margin-bottom: 10px;
}

#divNodesFrom {
    margin-bottom: 20px;
}

.positionRelative > div,
.receivedRelative > div {
    float: left;
    padding-right: 5px;
}

.btn-sm, .btn-group-sm > .btn {
    padding: 2px 10px;
}

.panel-heading {
    padding: 5px 15px;
    font-weight: bold;
}

#node-header {
    margin-bottom: 10px;
}

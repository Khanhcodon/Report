<div class="appoint">
    <div class="row">
        <div class="col-md-8">
            {{if number > 0}}
            <div class="form-group">
                <label data-res="egov.resources.document.appoint.number"></label>
                : <label>${number}</label> 
            </div>
        </div>
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label data-res="egov.resources.document.appoint.dateAppoint"></label>
                <input type="datetime" class="form-control datepicker dateAppoint" value="${talkingDate}" />
            </div>
        </div>
        <div class="col-md-8">

        </div>
    </div>
    <div class="form-group">
        <label data-res="egov.resources.document.appoint.remind"></label>:
        <textarea class="form-control remind" rows="5">${remind}</textarea>
    </div>
</div>

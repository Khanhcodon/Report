    justify-content: flex-end;
}

    #chat-body .chattergroup:last-child {
        margin-bottom: 3px;
    }

#chat-body .chat-body {
    overflow-x: hidden;
    overflow-y: auto;
    padding-bottom: 15px;
    width: 100%;
}

#chat-body .chat-message {
    width: 284px;
}

#chat-body .chattergroup-content {

.clearfix {
    zoom: 1;
}

    .clearfix:after {
        clear: both;
        content: ".";
        display: block;
        font-size: 0;
        height: 0;
        line-height: 0;
        visibility: hidden;
    }

[contenteditable=true]:empty:before {
    content: attr(placeholder);
    display: block; /* For Firefox */
    color: #555;
}

.viewer-backdrop {
    background-color: rgba(0,0,0,.65);
}

.btn-emoticon {
    border-radius: 50%;
    font-size: 24px;

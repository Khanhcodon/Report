    }

#chat-body .chat-image {
    background-repeat: no-repeat;
    background-size: cover !important;
    border-radius: inherit;
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, .1);
}

#chat-body .chat-config {
    color: #cecece;
    text-align: center;
    padding: 10px 50px;

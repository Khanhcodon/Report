#chat-body .message-avatar {
    position: relative;
}

    #chat-body .message-avatar .user-avatar {
        display: inline-block;
        height: 28px;
        position: relative;
        width: 28px;
    }

    #chat-body .message-avatar img {
        border-radius: 50%;
    }

#chat-body .chat-seen {
    color: #90949c;
    font-size: 12px;
    display: none;
}

    #chat-body .chat-seen.isgroup {
        margin-left: 45px;
    }

    #chat-body .chat-seen:not(.isgroup) {
        float: right;

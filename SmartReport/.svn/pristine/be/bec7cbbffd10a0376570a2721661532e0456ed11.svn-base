using System;
using System.Runtime.Serialization;

namespace Bkav.eGovCloud.Entities.Customer
{
    /// <summary>
    /// Customer
    /// </summary>
    public class Citizen
    {
        /// <summary>
        /// Lấy hoặc thiết lập Id
        /// </summary>
        public int Id { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập Account
        /// </summary>
        public string Account { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập Muối của mật khẩu
        /// </summary>
        public byte[] PasswordSalt { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập Mật khẩu đã được băm với muối
        /// </summary>
        public byte[] PasswordHash { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập tên đầy đủ của người dùng
        /// </summary>
        public string CitizenName { get; set; }

        /// <summary>
        /// Lấy hoặc thiết họ của người dùng
        /// </summary>
        public string FirstName { get; set; }

        /// <summary>
        /// Lấy hoặc thiết tên của người dùng
        /// </summary>]
        public string LastName { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập số điện thoại của người dùng
        /// </summary>
        public string Phone { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập email của người dùng
        /// </summary>
        public string Email { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập số chứng minh thư của người dùng
        /// </summary>
        public string IdentityCard { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập ngày cấp chứng minh thư của người dùng
        /// </summary>
        public DateTime? DateOfIssue { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập nơi cấp chứng minh thư của người dùng
        /// </summary>
        public string PlaceOfIssue { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập địa chỉ của người dùng
        /// </summary>
        public string Address { get; set; }

        /// <summary>
        /// Lấy hoặc thiết lập tình trạng của người dùng
        /// </summary>
        public bool IsActivated { get; set; }
    }
}
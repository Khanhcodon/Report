@{
    Layout = null;
}

<div id="CreateForm">
    <form class="form-horizontal">
        <div class="create-form hidden">
            @Html.Partial("_CreateOrEdit")
        </div>
        <div class="form-group">
            <div class="pull-right" style="margin-right: 30px; margin-top: 5px;">
                <a href="#" class="btn btn-warning btn-sm" id="btnAddNew">Thêm Lịch</a>
                <a href="#" class="btn btn-warning btn-sm hidden" id="btnSubmit">Cập nhật (ctrl + s)</a>
            </div>
        </div>
    </form>
</div>

<div class="privateCalendar">
    <h5 style="color: red; font-weight: bold;">Danh sách Lịch Cá nhân</h5>
    <table class="table table-bordered table-hover" style="width: 100%; border-collapse:collapse;">
        <colgroup>
            <col style="width:350px" />
            <col style="width:150px" />
            <col style="width:150px" />
            <col style="width:150px" />
            <col style="width:100px" />
            <col style="width:100px" />
            <col style="width:150px" />
        </colgroup>
        <thead>
            <tr>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Nội dung</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Đơn vị chuẩn bị</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">LĐ UB</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Thành phần</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">LĐ VP</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Địa điểm</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Ghi chú</th>
                <th style="border: 1px solid #e7e9fd; padding: 8px;">Chi tiết</th>
            </tr>
        </thead>
        <tbody id="tbody_calendar_private">
            <tr>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>


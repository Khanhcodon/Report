body, html {
    cursor: default !important;
    height: 100%;
    font-family: "RobotoDraft",Tahoma,Arial,sans-serif;
    font-family: Roboto, sans-serif;
    font-size: 11.5px;
    font-style: normal;
    font-weight: 400;
    line-height: 22px;
    overflow: hidden;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
    color: black;
}

.ins-extension {
    padding: 15px;
}

    .ins-extension > div {
        display: none;
    }

    .ins-extension .ins-step1 {
        display: block;
    }

    .ins-extension div {
        margin-bottom: 10px;
    }

    .ins-extension .ins-title {
        font-size: 28px;
    }

    .ins-extension .ins-step {
        font-size: 18px;
    }

    .ins-extension .ins-image {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .ins-extension .ins-buttons {
    }

    .ins-extension img{
        height: 128px;
    }

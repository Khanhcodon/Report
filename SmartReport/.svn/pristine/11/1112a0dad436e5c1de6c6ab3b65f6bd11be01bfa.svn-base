@@font-face {
    font-family: 'Roboto-Bold';
    src: url('../../../../Content/fonts/Roboto-Bold.ttf') format('truetype');
}

@@font-face {
    font-family: 'Roboto-Regular';
    src: url('../../../../Content/fonts/Roboto-Regular.ttf') format('truetype');
}

@@font-face {
    font-family: 'Roboto-BoldItalic';
    src: url('../../../../Content/fonts/Roboto-BoldItalic.ttf') format('truetype');
}

.jstree-themeicon {
    font-size: 19px;
    color: #188ef4;
}

.modal.fade.modal-right .modal-dialog {
    width: 100%;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    position: relative;
}

#sectionDetail {
    padding-top: 15px;
    height: 500px;
    color: #000;
}

.container-fluid {
    color: #000;
}

.dropdown-menu {
    width: 20%;
}

.form-group {
    margin-bottom: 1px;
}

.list-group-item {
    width: 80%;
    display: flex;
}

.page-header {
    margin-top: 1px;
    margin: 0px;
}

.title {
    background: #36a3f7;
    height: 50px;
}

p {
    font-size: 25px;
    color: #fff;
}

#hot-display-license-info {
    display: none;
}

#hot {
    display: block;
}

.nav-tabs p {
    color: #000;
}

.form {
    display: flex;
}

.dropdown-toggle::after {
    content: none;
}

.customtab li a.nav-link {
    padding: 3px 20px;
}

/*tab footer*/
#content-tab1-footer,#content-tab2-footer {
    display:none;
}
.content-tab-footer {
    position: absolute;
    bottom: 0;
    left: 0;
    min-height: 300px;
    background: #e2dfdf;
    width: 72.6%;
}
/*end tab footer*/
/* Left main*/
#left-main {
    position:relative;
}
#btn-toggle-main-left {
    position:absolute;
    right: 5px;
    top: 20px;
    }
/*End left main*/
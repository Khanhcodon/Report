
<div class="chat-tab-container">
    <div class="chat-tab-flyout">
        <div class="chat-tab-flyout-outer">
            <div class="chat-tab-flyout-inner">
                <div class="chat-tab-header">
                    <div class="title-bar">
                        <div class="titlebar-text-wrapper">
                            <span class="unread"><span class="total-unread">0</span></span>
                            <span class="online" style="display:none;">
                                <span></span>
                            </span>
                            <span>${title}</span>
                        </div>
                        <ul class="chat-functions">
                            <li class="btnInfo">
                                <span class="icon-info" style="font-size: 15px;"></span>
                            </li>
                            <li class="btnMaximize hidden">
                                <span class="icon-expand2"></span>
                            </li>
                            <li class="btnClose">
                                <span class="icon-close"></span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="chat-tab-content">

                </div>
            </div>
        </div>
    </div>
</div>
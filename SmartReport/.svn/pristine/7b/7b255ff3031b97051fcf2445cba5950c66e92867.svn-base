@font-face {
	font-family: 'Roboto-Regular';
	src: url('../fonts/Roboto-Regular.ttf') format('truetype');
}

@font-face {
	font-family: 'Roboto-Bold';
	src: url('../fonts/Roboto-Bold.ttf') format('truetype');
}

#content-agv > .row {
	overflow: auto;
}

.dashboard {
	clear: both;
	background-image: url(../../Content/Images/home/bg.png) !important;
	background-repeat: no-repeat;
}

	.dashboard .row {
		margin: 0;
	}

.dashboard-grp {
	padding-left: 10px;
}

.content-dashboard {
	display: flex;
}

content-dashboard div {
	float: left;
	background-color: #ffffff;
}

.content-left {
	flex: 2;
	margin-right: 20px;
}

	.content-left .chart-report {
		height: 325px;
		width: 100%;
	}

	.content-left .grid-repeat {
		height: 268px;
		padding: 30px 0 0 60px;
		display: flex;
	}

		.content-left .grid-repeat .grid-report {
			margin-right: 32px;
			flex: 1;
			height: 178px;
			border: 1px solid #F0ECE9;
			border-radius: 5px;
			box-shadow: 2px 3px rgba(0,0,0,0.16);
			-webkit-box-shadow: 2px 3px rgba(0,0,0,0.16);
			-moz-box-shadow: 2px 3px rgba(0,0,0,0.16);
		}

			.content-left .grid-repeat .grid-report .grp {
				float: left;
				width: calc(100% - 8px);
				padding-left: 25px;
			}

			.content-left .grid-repeat .grid-report .bg-left {
				float: left;
				width: 6px;
				height: 80px;
				margin-top: 49px;
				background-color: #928E8E;
				border-radius: 0 5px 5px 0;
			}

			.content-left .grid-repeat .grid-report label {
				line-height: 50px;
				font-size: 16px;
				font-family: 'Roboto-Regular';
				font-weight: unset;
			}

			.content-left .grid-repeat .grid-report ul li {
				list-style: none;
				height: 40px;
			}

				.content-left .grid-repeat .grid-report ul li a {
					font-size: 14px;
					font-family: 'Roboto-Regular';
				}

				.content-left .grid-repeat .grid-report ul li span {
					font-size: 13px;
					font-family: 'Roboto-Bold';
				}

					.content-left .grid-repeat .grid-report ul li span.blue {
						color: #4379DE;
						float: right;
						padding-right: 20px;
					}

					.content-left .grid-repeat .grid-report ul li span.red {
						color: #FF5F75;
						float: right;
						padding-right: 20px;
					}

.chart-report .title-header-right {
	vertical-align: middle;
	line-height: 60px;
	margin-left: 15px;
	height: 60px;
	font-size: 18px;
	font-family: 'Roboto-Regular';
}

.detail-chart {
	clear: both;
	height: 250px;
	padding: 20px 0 0 40px;
}

#container-chart {
	height: 271px;
	width: 50%;
	float: left;
}

#container-chart-pie {
	float: left;
	width: 50%;
	height: 271px;
}

.content-right {
	flex: 1;
	width: 33%;
	margin-right: 20px;
}

	.content-right .title-header-right {
		height: 60px;
		border-bottom: 1px solid #F39C1A;
		vertical-align: middle;
		line-height: 60px;
		margin-left: 15px;
		display: flex;
		justify-content: space-between;
	}

			.content-right .title-header-right .left-title span {
				font-size: 18px;
				font-family: 'Roboto-Regular';
			}

		.content-right .title-header-right .right-title .select-css {
			font-size: 18px;
			font-family: 'Roboto-Regular';
			line-height: 1.3;
			padding: .6em 1.4em .5em .8em;
			width: 100%;
			max-width: 100%;
			box-sizing: border-box;
			margin: 0;
			border: none;
			-moz-appearance: none;
			-webkit-appearance: none;
			appearance: none;
			background-color: #fff;
			background-image: url(../../Content/Images/home/small-down.png), linear-gradient(to bottom, #ffffff 0,#ffffff 100%);
			background-repeat: no-repeat, repeat;
			background-position: right .7em top 50%, 0 0;
			background-size: .65em auto, 100%;
		}

		.content-right .title-header-right .right-title {
			display: table-cell;
			vertical-align: middle;
			height: 60px;
			width: 70px;
		}

			.content-right .title-header-right .right-title .select-css:focus {
				outline: none;
			}

	.content-right .list-report {
		margin: 0 0 0 15px;
		height: 392px;
		overflow-y: auto;
	}

		.content-right .list-report ul {
			margin-top: 15px;
		}

			.content-right .list-report ul li {
				list-style: none;
				height: 40px;
			}

				.content-right .list-report ul li span {
					float: left;
				}

                    .content-right .list-report ul li span.wraptext {
                        max-width: calc(100% - 40px - 32px);
                        min-width: calc(100% - 40px - 32px);
                    }

					.content-right .list-report ul li span:first-child {
						font-size: 14px;
						font-family: 'Roboto-Bold';
						width: 40px;
					}

					.content-right .list-report ul li span:last-child {
						width: 32px;
						text-align: center;
					}

					.content-right .list-report ul li span img {
						width: 20px;
						height: 20px;
					}

	.content-right .download-all {
		text-align: center;
		margin-top: 40px;
	}

		.content-right .download-all .btn-download {
			color: #ffffff;
			background-color: #2680EB;
			font-size: 16px;
			font-family: 'Roboto-Regular';
		}

.content-left, .content-right {
	height: 593px;
	background-color: #ffffff;
	border: 1px solid #F0ECE9;
	border-radius: 5px;
	box-shadow: 2px 3px rgba(0,0,0,0.16);
	-webkit-box-shadow: 2px 3px rgba(0,0,0,0.16);
	-moz-box-shadow: 2px 3px rgba(0,0,0,0.16);
}

.header-dashboard {
	height: 50px;
	margin: 0 auto;
	vertical-align: middle;
	line-height: 50px;
}

	.header-dashboard > span {
		font-family: "Roboto-Regular";
		font-size: 20px;
	}
    .footer-dashboard {
        padding-top: 27px;
        font-size: 16px;
    }

@media only screen and (max-width: 1364px) {
	.content-dashboard {
		flex-direction: column;
	}

	.content-right {
		width: auto;
		margin-top: 20px;
	}

	.content-right .download-all {
		margin-bottom: 40px;
	}
}

#listbc .table tbody tr td {
	padding: 10px;
	font-size: 15px;
	border: 1px solid #ececec !important;
}

#listbc .table thead tr th {
	padding: 6px !important;
	padding: 5px 8px;
	border: 1px solid #e7e9fd;
	border-bottom: 2px solid #eaeaea;
	vertical-align: middle;
}

#detailbc .table > thead > tr > th {
	border-top: none;
	padding: 0 8px;
	line-height: 19px;
}

#detailbc .table tbody {
	border-top: 2px solid #e7e9fd;
}

#detailbc .table > * > tr > * {
	padding: 5px 8px;
	border: 1px solid #e7e9fd !important;
}

#detailbc td.status span {
	border: solid #ff6a00 2px;
	padding: 3px 7px;
	border-radius: 5px;
}

#detailbc td.status.reported span {
	border-color: #5792ff;
}


<div id="viewmail" class="mdl-layout mdl-js-layout mdl-layout--fixed-header" maildetailid="${id}" mailid="${mailId}">
    <div class="mdl-layout__header mdl-layout__header--seamed mail-header" style="display: block;">
        <div class="mdl-layout__header-row">
            <div aria-expanded="false" id="btnbacktolist" role="button" tabindex="0" class="backtoList">
                <i class="material-icons">arrow_back</i>
            </div>
            <div class="mdl-layout-spacer"></div>
            <button id="saveDraft" class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect pull-right">
                <i class="material-icons">save</i>
            </button>
            <button id="sendMail" class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect pull-right">
                <i class="material-icons">send</i>
            </button>
        </div>
    </div>
    <div class="mdl-layout__content">
        <div class="mail-info">
            <div>
                <div class="form-group">
                    <label>Tới: </label>
                    <div class="form-value">
                        <textarea id="mailTo" required>${to}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label>Chủ đề: </label>
                    <div class="form-value">
                        <textarea id="mailSubject" required>${subject}</textarea>
                    </div>
                </div>
            </div>

            <div id="mailBody">
                <div class="send-mail-actions">
                    <form method="post" id="uploadImageForm" action="/Bmail/GetBase64Image" enctype="multipart/form-data">
                        <input type="file" name="file" class="hidden" id="txtInsertImage" accept=".jpg,.jpeg,.gif,.png,.bmp" />
                        <label for="txtInsertImage" class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect" id="btnInsertImage">
                            <i class="material-icons">image</i>
                        </label>
                    </form>
                    <form method="post" id="uploadFileForm" action="${serverUpload}" enctype="multipart/form-data">
                        <input type="file" name="Filedata" class="hidden" id="txtInsertFile" multiple />
                        <label for="txtInsertFile" class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect" id="btnInsertFile">
                            <i class="material-icons">attach_file</i>
                        </label>
                    </form>
                </div>
                <div id="Content" contenteditable="true">
                    <br />
                    <div id="signal">
                        <!--Chèn chữ ký sau này-->
                    </div>
                </div>
            </div>

            <div id="wrapAttachment">
                <ul id="mailAttachDetail" class="mdl-list"></ul>
            </div>

            <div id="oldMail" style="display: none">
                <div id="oldMailContent"></div>
            </div>
        </div>
    </div>
</div>
    /// <summary>
    /// <para>Mốc thời gian làm việc trong một ngày</para>
    /// (CuongNT@bkav.com - 191212)
    /// </summary>
    public class WorktimeOfDay
    {
        /// <summary>
        /// Thời điểm bắt đầu làm việc buổi sáng
        /// </summary>
        public HourMinute AMStartWorking { get; set; }

        /// <summary>
        /// Thời điểm dừng tính là nhận hồ sơ buổi sáng, chuyển sang tính là nhận buổi chiều.
        /// </summary>
        public HourMinute AMMiddleWorking { get; set; }

        /// <summary>
        /// Thời điểm kết thúc làm việc buổi sáng
        /// </summary>
        public HourMinute AMEndWorking { get; set; }

        /// <summary>
        /// Thời điểm bắt đầu làm việc buổi chiều
        /// </summary>
        public HourMinute PMStartWorking { get; set; }

        /// <summary>
        /// Thời điểm dừng tính là nhận hồ sơ buổi chiều, chuyển sang tính là nhận buổi sáng làm việc tiếp theo.
        /// </summary>
        public HourMinute PMMiddleWorking { get; set; }

        /// <summary>
        /// Thời điểm kết thúc làm việc buổi chiều
        /// </summary>
        public HourMinute PMEndWorking { get; set; }
    }

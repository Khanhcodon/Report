
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">X</span></button>
            <a class="pull-right help-content" ><i class="icon icon-help"></i></a>
            <h4 class="modal-title">${title}</h4>
        </div>
        <div class="modal-body">
            
        </div>
        <div class="modal-footer">
            <label class="checkbox document-color pull-left ignore">
                <input name="checkbox[]" value="" type="checkbox">
                <span class="document-color-1"><i class="icon-check glyphicon"></i></span>
                ${ignoreText}
            </label>
        </div>
    </div>
</div>
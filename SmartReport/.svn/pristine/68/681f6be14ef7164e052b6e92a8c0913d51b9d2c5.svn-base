@model ShareFolderModel

<style type="text/css">
    .schedule-config input {
        width: 50px;
        display: inline-block!important;
    }
</style>
<script>
    $(function () {
        $("#IsNetwork").bind("change", function () {
            if (this.checked) {
                $(".IsNetwork").show();
            }
            else {
                $(".IsNetwork").hide();
            }
        });
    });

</script>

@using (Html.BeginForm(Model.ShareFolderId == 0 ? "Create" : "Edit"))
{
    @Html.ValidationSummary(true)
  
    @Html.HiddenFor(model => model.ShareFolderId)
    <table id="timeJobInfo" style="width: 100%">
        <tr>
            <td style="width: 200px;">
                @Html.LabelRequireFor(model => model.Directory):
            </td>
            <td>
                @Html.TextBoxFor(model => model.Directory)
                @Html.ValidationMessageFor(model => model.Directory)
                <div>
                    VD:
                    <span style="color: red">\\10.2.22.184\share</span>
                    or  <span style="color: red">F:\test\</span>
                </div>
            </td>
        </tr>

        <tr>
            <td style="width: 200px;">
                @Html.LabelFor(model => model.IsNetwork):
            </td>
            <td>
                @Html.CheckBoxFor(model => model.IsNetwork)
            </td>
        </tr>

        <tr style="@(!Model.IsNetwork ? "display:none" : "")" class="IsNetwork">
            <td>
                @Html.LabelFor(model => model.UserName):
            </td>
            <td>
                @Html.TextBoxFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </td>
        </tr>
        <tr style="@(!Model.IsNetwork ? "display:none" : "")"  class="IsNetwork">
            <td>
                @Html.LabelFor(model => model.Password):
            </td>
            <td>
                @Html.Password("Password", Model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
    </table>
}
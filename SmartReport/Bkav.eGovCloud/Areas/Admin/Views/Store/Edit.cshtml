@model StoreModel
@{
    ViewBag.Title = Localizer("Bkav.eGovCloud.Areas.Admin.Title.Store.Edit");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="../../../../Scripts/bkav.egov/libs/json2.min.js"></script>
<script src="../../../../Scripts/bkav.egov/libs/jquery/jquery.validate.min.js"></script>
<script src="../../../../Scripts/bkav.egov/libs/jquery/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#delete").click(function () {
            eGovMessage.show(
                '@Html.Raw(Localizer("Bkav.eGovCloud.Areas.Admin.Store.ConfirmDelete"))',
                null,
                eGovMessage.messageButtons.YesNo,
                function () {
                    $("#formdelete").submit();
                }
            );
        });
    });
</script>

<div class="section-header">
    <div class="title">
        <i class="fa icon-paste2"></i>
        <span data-res="egov.resources.sitemap.store"></span>
    </div>
    <div class="options">
        <a class="btn  btn-warning control-btn" id="submit" href="#">
            <span class="icon icon-checkmark"></span>
            <span class="text-uppercase" data-res="egov.resources.buttons.save"></span>
        </a>
        <a class="btn  btn-default control-btn" href="/admin/store/Index">
            <span class="icon icon-arrow-left2"></span>
            <span class="text-uppercase" data-res="egov.resources.buttons.back"></span>
        </a>
    </div>
</div>
@using (Html.BeginForm())
{
    <div id="tabs" class="bkavegov">
        @Html.Partial("_Notifications")
        @{
    Html.RenderPartial("_CreateOrEdit", Model);
        }
        @Html.AntiForgeryToken()
    </div>
}
<form id="formdelete" style="display: none" action="@Url.Action("Delete", new { Id = Model.StoreId })" method="POST">
    @Html.AntiForgeryToken()
</form>
@{
    Html.RenderPartial(Request.Browser.IsMobileDevice ? "_LoginMobile" : "_LoginNormal");
}

<script>
    loginOtherEmailSystemConfig = {
        enable: "@useOtherSystem" == "True",
        type: "@connectionSettings.MailType",
        mailUrl: "@connectionSettings.BmailLink"
    },

    returnUrl = "@ViewBag.ReturnUrl",
    defaultDomain = "@ViewBag.DefaultDomain";
    maximumUserInput = parseInt("@ViewBag.MaximumUserInput");
    limitByMac = "@ViewBag.LimitByMAC" == "True";

    //document.domain = "@ViewBag.DocumentDomain";
</script>

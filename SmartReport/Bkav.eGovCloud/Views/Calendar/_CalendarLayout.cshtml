@{
    Layout = null;
    var isFromDocument = (bool)ViewBag.IsFromDocument;
}

<link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="/Content/bkav.egov/egov.custom.css" rel="stylesheet" />
<link href="/Scripts/bkav.egov/libs/jquery/jquery.timepicker/jquery.timepicker.css" rel="stylesheet" />
<link href="/Content/bkav.egov/calendar/calendar.css?v=1" rel="stylesheet" />

<script type="text/javascript">
    document.domain = '@ViewBag.Domain';
</script>

<div id="egovCalendar">
    <div class="status label label-primary">Đang xử lý...</div>
    @if (!isFromDocument)
    {
        <div class="row">
            <div class="col-sm-2 west-panel">
                <div class="list-group">
                    <a href="#daily" id="daily" class="list-group-item">
                        <span style="margin-right: 10px;">
                            <img src="/Content/bkav.egov/images/calendar/today.png" width="16" />
                        </span>
                        <span class="node-name">Lịch trong ngày</span>
                    </a>
                    <a href="#weekly" id="weekly" class="list-group-item">
                        <span style="margin-right: 10px;">
                            <img src="/Content/bkav.egov/images/calendar/weekly.png" width="16" />
                        </span>
                        <span class="node-name">Lịch trong tuần</span>
                    </a>
                    <a href="#monthly" id="monthly" class="list-group-item">
                        <span style="margin-right: 10px;">
                            <img src="/Content/bkav.egov/images/calendar/montly.png" width="16" />
                        </span>
                        <span class="node-name">Lịch trong tháng</span>
                    </a>
                    <a href="#manager" id="manager" class="list-group-item">
                        <span style="margin-right: 10px;">
                            <img src="/Content/bkav.egov/images/calendar/calendar.png" width="16" />
                        </span>
                        <span class="node-name">Quản lý lịch</span>
                    </a>
                </div>
            </div>

            <div class="col-sm-14 center-panel" id="printerPages">
                <div >                    
                    @RenderBody()
                </div>
                <div class="managerCalendar">
                    @Html.Partial("Manager")
                </div>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }
</div>

<script type="text/javascript">
    window.hasPermision = '@ViewBag.HasPermission' == "True";
    window.isFromDocument = '@ViewBag.IsFromDocument' == "True";
</script>

@Html.Partial("CalendarTemplate")

<script src="/Scripts/bkav.egov/mvendor.min.js"></script>
<script src="/Scripts/bkav.egov/egovcore.min.js"></script>
<script src="/Scripts/bkav.egov/util/bkav.utilities.min.js"></script>
<script src="/Scripts/bkav.egov/libs/jPrint.js"></script>
<script src="/Scripts/bkav.egov/libs/jquery/jquery.timepicker/jquery.timepicker.min.js"></script>
<script src="/Scripts/bkav.egov/views/calendar/calendar.js"></script>

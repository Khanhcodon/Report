@{
    ViewBag.Title = "Cật nhật phiên bản";
    Layout = null;
}

<style type="text/css">
    .header {
        background-image: url(../../Content/Images/top_bg.PNG);
        background-repeat: no-repeat;
        height: 100px;
    }

    .hint {
        color: #808080;
        font-size: 11px;
    }

    textarea {
        height: 40px;
    }
</style>
<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/bkav.egov/libs/jquery/jquery-2.2.3.min.js")"></script>

<script type="text/javascript">
    $(function () {

    });
</script>

<div class="header"></div>
<div class="container">
    <h3>
        Nâng cấp hệ thống
    </h3>

    <form class="form-horizontal" method="post">
        <div class="">
            <div class="form-group form-group-sm">
                <label class="form-label col-md-3">Token</label>
                <div class="col-md-13">
                    <input name="token" class="form-control" />
                </div>
            </div>
        </div>
        <div class="">
            <div class="form-group form-group-sm">
                <label class="form-label col-md-3">Query</label>
                <div class="col-md-13">
                    <textarea name="query" class="form-control" rows="4" style="height: 200px;">@ViewBag.Query</textarea>
                </div>
            </div>
        </div>
        <div class="">
            <div class="form-group form-group-sm">
                <label class="form-label col-md-3">Chọn Đơn vị</label>
                <div class="col-md-13">
                    <select name="domainId" class="form-control">
                        @foreach (var domain in ViewBag.Domains)
                        {
                            <option value="@domain.Value" @(domain.Selected? "selected" : "")>@domain.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-offset-3 col-md-13">
                <button type="submit" class="btn btn-primary btn-sm">Chạy câu lệnh</button>
            </div>
        </div>
        <div class="form-group form-group-sm">
            @if (ViewBag.Result != null) { 
            <div class="col-md-offset-3 col-md-13">
                <textarea class="form-control" style="height: 200px;" rows="10">@Html.Raw(ViewBag.Result)</textarea>
            </div>
            }
        </div>
    </form>
</div>
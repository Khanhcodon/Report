@using StackExchange.Profiling
@{
    var allReports = ViewBag.AllReports as string;
    Layout = null;
}

<link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="/Content/bootstrap/icomoon.css" rel="stylesheet" />
<link href="../../Content/bkav.egov/eReport.css" rel="stylesheet" />
<link href="/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

<script type="text/javascript">
    document.domain = '@ViewBag.Domain';
</script>

<script src="/Scripts/bkav.egov/mvendor.min.js" type="text/javascript"></script>
<script src="/Scripts/bkav.egov/libs/jstree_pre1.0_fix_1/jquery.jstree.js" type="text/javascript"></script>

<script src="/Scripts/bkav.egov/util/bt.util.date.min.js"></script>
<script src="/Scripts/bkav.egov/libs/bkav/bkav.grid.min.js" type="text/javascript"></script>
<script src="../Scripts/bkav.egov/libs/jquery/jquery.ui.datepicker-vi-VN.js"></script>
<script src="/Scripts/bkav.egov/resource/egov.resources.vi-VN.min.js"></script>

<div class="status label label-primary">Đang lấy dữ liệu...</div>
<div class="egov" id="eGovReport">
    <div id="container" class="report-container">
        <div id="left">
            <div id="tree" class="tree">
                <ul class="report"></ul>
            </div>
        </div>
        <div id="right">
            <div id="report">
                <div>
                    @Html.Partial("_Header")
                </div>
                <div class="reportInfo">
                    <div>
                        <span class="reportName"></span>
                        <span class="pull-right">
                            Cập nhật lúc:
                            <span class="lastUpdate"></span>
                            <span class="" title="Đồng bộ đến thời điểm hiện tại"></span>
                        </span>
                    </div>
                    <div>
                        <span class="reportDesc"></span>
                    </div>
                </div>
                <div class="container-fluid" id="showTotalDocument">
                    <div>
                        <b>Tổng số văn bản: <span id="total"></span></b>
                        @*<div class="btn-group pull-right" id="keepOpenShowColumn">
                            <button type="button" class="btn btn-success dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Cot hien thi <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" id="btnShowColumn" style="width:300px">
                                
                            </ul>
                        </div>*@
                    </div>
                </div>
                <div id="reportViewer" class="">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/bkav.egov/views/report/eReport.js?v=kd"></script>

<script id="treeTemplate" type="text/x-jquery-tmpl">
    <li id="${id}" class="jstree-${state}" title="${desc}">
        <ins class="jstree-icon">&nbsp;</ins>
        {{if id != 0}}
        {{if isLabel}}
        <b style="">${name}</b>
        {{else}}
        <i class="jstree-icon">&nbsp;</i>
        <a data-id="${id}"
           group-id="${groupId}"
           data-groupname="${treeGroupName}"
           data-groupdisplayname="${name}"
           data-group-value="${treeGroupValue}"
           data-is-show-total="${isTotal}"
           href="#">
            ${name}
        </a>
        {{/if}}
        {{else}}
        <b>${name}</b>
        {{/if}}
    </li>
</script>
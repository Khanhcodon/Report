@{
    Layout = null;
}

<div class="home-statictis">
    <div class="xlvb-stat">
        <div class="content-body">
            <div class="panel panel-primary">
                <div class="panel-heading">Tổng hợp xử lý văn bản</div>
                <div class="panel-body">
                    <div class="col-md-5">
                        <div class="lookup-statistic" id="xlvb_statisticTotal">
                            <div class="statistic-label">
                                <div>
                                    <span class="statistic-time"></span>
                                    <a href="#" class="statistic-detail">
                                        <i class="material-icons" style="font-size: 14px;">chevron_right</i>
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                            <div class="statistic-piechat" style="margin-top: 0px;">
                                <div class="statistic-percen"></div>
                                <div class="statistic-process">Đúng hẹn</div>
                            </div>
                            <div id="xlvb_piechart" style="margin-top: 30px;"></div>
                        </div>
                    </div>
                    <div class="col-md-offset-1 col-md-10">
                        <div id="xlvb_columnChart" style="height: 300px; width: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hsmc-stat">
        <div class="content-body">
            <div class="panel panel-success">
                <div class="panel-heading">Tổng hợp xử lý Hồ sơ một cửa</div>
